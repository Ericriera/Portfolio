import AboutmeIcon from "./AboutmeIcon.astro"

const text1 = "My name is Eric Riera, and I am a graduate in Computer Engineering with a specialization in Software Engineering from FIB-UPC. I am currently working as a Full Stack Engineer at Air-Fi."
const text2 = "I describe myself as a fast learner and a good problem solver. I like learning new things every day and taking on new challenges."
const text3 = "When I have free time, some of my hobbies are playing basketball, working on personal projects, watching series or movies and listening to music. I also love to travel and spend time with my family and friends."

const years = new Date().getFullYear() - 2002;
const workingYears = new Date().getFullYear() - 2023;
const countries = 11;
const ballinYears = 16;
